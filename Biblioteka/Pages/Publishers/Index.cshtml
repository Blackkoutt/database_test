@page
@model Biblioteka.Pages.Publishers.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="myContainerv2">
    <button class="button buttonDefault" style="float:right; margin-right: 50px;">
        <a class="nav-link text-light" asp-page="Create">Dodaj nowe wydawnictwo</a>
    </button>

    <form method="get">
        <div class="searchingsegment">
            <div class="wrapper">
                <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" />
                <input type="text" class="input" placeholder="Wyszukaj wydawnictwo" name="publisherName">
                <button type="submit" class="searchbtn">
                    <i class="fas fa-search"></i>
                </button>
            </div>
    </form>

    <h1>Wydawnictwa</h1>

    <table class="tableToModify">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher[0].name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Publisher)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <button class="button buttonGreen"><a class="lightText" asp-page="./Edit" asp-route-id="@item.publisherId">Edytuj</a></button>
                        <button class="button buttonRed"><a class="lightText" asp-page="./Delete" asp-route-id="@item.publisherId">Usuń</a></button>
                        <button class="button buttonYellow"><a class="lightText" asp-page="./Details" asp-route-id="@item.publisherId">Detale</a></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
