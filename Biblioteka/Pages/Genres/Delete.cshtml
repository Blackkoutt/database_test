@page
@model Biblioteka.Pages.Genres.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="myContainerv2">
    <h1>Usunięcie gatunku: @Model.Genre.name</h1>
    <div class="myForm">
        <h3>Czy napewno chcesz usunąć ten element?</h3>
        <div>
            <dl>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Genre.name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Genre.name)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Genre.genreId" />
                <input type="submit" value="Usuń" class="button buttonRed" /> 
                <button class="button buttonDefault"><a class="lightText" asp-page="./Index">Wróć</a></button>
            </form>
        </div>
    </div>
</div>


