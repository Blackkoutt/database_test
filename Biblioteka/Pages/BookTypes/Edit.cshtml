@page
@model Biblioteka.Pages.BookTypes.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="myContainerv2">
    <h1>Edycja Rodzaju Książki: @Model.BookType.name</h1>

    <div class="myForm">
        <hr />
        <div class="row">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BookType.typeId" />
                <div class="form-group">
                    <label asp-for="BookType.name" class="control-label"></label>
                    <input asp-for="BookType.name" class="form-control" />
                    <span asp-validation-for="BookType.name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="button buttonGreen lightText" />
                </div>
            </form>
        </div>

        <div>
            <button class="button buttonDefault"><a class="lightText" asp-page="./Index">Wróć</a></button>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
