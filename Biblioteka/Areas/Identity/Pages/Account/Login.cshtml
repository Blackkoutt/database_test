@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="myContainerv2">
    <h1>Logowanie</h1>
    <div class="myForm" style="color:black;">
        <div class="row" style="width:75%;position:relative; left:15%">

            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3" style="color:white;">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button class="button buttonGreen" id="registerSubmit" type="submit" style="width:50%; left:25%;position: relative;">Zaloguj się</button>
                    </div>
                    <div>
                        <p>
                            <a class="lightText" id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                        </p>
                        <p>
                            <a class="lightText" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
                        </p>
                        <p>
                            <a class="lightText" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij potwierdzenie na email</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
    
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}